<body>
  <canvas id="particles"></canvas>
  <div id="jumpscare"></div>
  <h1>Choisis ta destinée</h1>
  <button id="blueBtn" class="btn">1000€</button>
  <button id="greenBtn" class="btn">Abonne-toi à TrelloxYT</button>

  <script>
    // Particules vertes du bas vers le haut
    const canvas = document.getElementById("particles");
    const ctx = canvas.getContext("2d");
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const particles = [];

    function createParticle() {
      particles.push({
        x: Math.random() * canvas.width,
        y: canvas.height + 10,
        speed: Math.random() * 2 + 1,
        size: Math.random() * 4 + 2
      });
    }

    function animateParticles() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      particles.forEach((p, i) => {
        p.y -= p.speed;
        ctx.fillStyle = "lime";
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
        ctx.fill();
        if (p.y < -10) particles.splice(i, 1);
      });
      requestAnimationFrame(animateParticles);
    }

    setInterval(createParticle, 100);
    animateParticles();

    // Jumpscare
    const jumpscare = document.getElementById("jumpscare");
    document.getElementById("blueBtn").onclick = () => {
      jumpscare.style.display = "block";
      setTimeout(() => {
        jumpscare.style.display = "none";
      }, 800);
    };
  </script>
  <audio id="bgMusic" src="bg.mp3" autoplay loop></audio>
  <audio id="clickGreen" src="ding.mp3"></audio>
  <audio id="clickBlue" src="scare.mp3"></audio>
  <div id="thanks" style="color:white; font-size:2rem; margin-top:20px; display:none;">Merci pour l'abo !</div>
  <div id="subCount" style="color:white; font-size:1.5rem; margin-top:10px;">Abonnés: ?</div>
<script>
// Simulated subscriber count placeholder
let count = 1000;
setInterval(()=>{
 document.getElementById('subCount').innerHTML = 'Abonnés: ' + count;
},2000);

// button sounds
const green = document.getElementById('greenBtn');
green.onclick = ()=>{
 document.getElementById('clickGreen').play();
 document.getElementById('thanks').style.display='block';
 window.open('https://youtube.com/@treloxgoat?si=l8OnzqHwJJwOD1S4','_blank');
};
const blue = document.getElementById('blueBtn');
blue.onclick = ()=>{
